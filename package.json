{
  "name": "ui-library-converter",
  "version": "1.0.0",
  "description": "A tool to migrate ShadCN UI to other UI libraries",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  
  "dependencies": {
    "electron": "^28.2.3",
    "fs-extra": "^11.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.synthai.uilibraryconverter",
    "productName": "UI Libray converter",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "directories": {
      "output": "dist"
    }
  }
}
